PORT=4000
HOST=0.0.0.0

# Connection options (or set DATABASE_URL instead)
DB_HOST=127.0.0.1
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=
DB_NAME=fleetflow
DB_SSL=false

# JWT auth settings
JWT_SECRET=replace-with-strong-secret
JWT_EXPIRES_IN=12h

# Safe defaults: run versioned migrations on startup.
DB_RUN_MIGRATIONS_ON_STARTUP=true

# Dangerous reset bootstrap from database/schema.sql (contains DROP statements).
DB_BOOTSTRAP_ON_STARTUP=false
